{% extends "base.html.twig" %}
{% block title %} {{ parent() }}- Modifier une rareté {% endblock %}
{% block contenu %}
<h1>Modifier une rareté</h1>

{% if form.rarete is defined %}
 {% if form.rarete != null %}

 <form class="form-signin" action="index.php?page=rareteModif" method="post" enctype="application/x-www-form-urlencoded">
    <div class="form-group">
        <label for="inputLibelle" class="sr-only">Nom de la rareté:</label>
        <input type="text" id="inputLibelle" name="inputLibelle" class="form-control" placeholder="Modifier le libelle" required>
    </div>


<input type="hidden" name="id" value="{{ form.rarete.id}}"/>

<button class="btn btn-lg btn-primary btn-block" type="submit" name="btModifier">Modifier</button>


{% else %}
 <h2 class="alert alert-danger" role="alert">{{ form.message }}</h2>
 <a href="index.php?page=rarete">Retourner sur la liste des raretés</a>
 {% endif %}
{% else %}

 {% if form.valide == true %}
 <h1 class="h3 mb-3 font-weight-normal">{{ form.message }} </h1>
 <h1 class="h3 mb-3 font-weight-normal"><a href="index.php?page=type">Retourner sur la liste des raretés</a></h1>
 {% else %}
 <h1 class="alert alert-danger" role="alert">{{ form.message }}</h1>
 <h1 class="h3 mb-3 font-weight-normal"><a href="index.php?page=type">Retourner sur la liste des raretés</a></h1>
 {% endif %}
{% endif %}
{% endblock %}


 
