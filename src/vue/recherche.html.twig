{% extends "base.html.twig" %}
{% block title %} {{ parent() }}- Résultat de votre recherche {% endblock %}
{% block contenu %}
<body>

    <h1 class="text-blk title">Résultats</h1><br>

   {% if resultats %}
            <div class="row">
                {% for resultat in resultats %}
                    <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12 mb-4">
                        <div class="card h-100">
                            <div id="image-container" class="text-center">
                                <div class="team-image-wrapper">
                                    {% if resultat.photo is not empty %}
                                    <img class="card-img-top" src="images/{{ resultat.photo }}" alt="{{ resultat.nom }}">
                                    {% else %}
                                    <img class="card-img-top" src="images/image-non-disponible.jpg" alt="Image non disponible">
                                    {% endif %}
                                </div>
                            </div>
                            <div class="card-body d-flex flex-column">
                                <p class="card-title">
                                    {{ resultat.nom|length > 50 ? resultat.nom|slice(0, 50) ~ '...' : resultat.nom }}
                                </p>
                                <p class="card-text">
                                    {{ resultat.titre|length > 45 ? resultat.titre|slice(0, 45) ~ '...' : resultat.titre }}
                                </p>
                                <p class="card-text mt-auto"><strong>Rareté:</strong> {{ resultat.rarete }}</p>
                                <p class="card-text"><strong>Type:</strong> {{ resultat.type }}</p>
                                <a href="index.php?page=persoFiche&id={{ resultat.id }}" class="btn btn-primary mt-3">Voir la fiche</a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <p class="text-center">Aucun résultat trouvé.</p>
        {% endif %}


</body>

<style>
body {
    font-family: Arial, sans-serif;
    background-color: #f4f4f4;
    margin: 0;
    padding: 0;
}

.card {
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.card-title {
    font-size: 18px;
    color: #333;
}

.card-text {
    font-size: 14px;
    color: #666;
}

.team-image-wrapper {
    width: 100%;
    height: 200px;
    overflow: hidden;
}

.team-image-wrapper img {
    width: 100%;
    height: auto;
}

.card-body {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    flex: 1;
}

.card-body p {
    margin-bottom: 1rem;
}

.card-body .mt-auto {
    margin-top: auto;
}




</style>

{% endblock %}